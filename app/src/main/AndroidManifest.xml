<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amitbhattarai.graycodeaccounting">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Navigation.NavigationDrawerPackage.Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Navigation.NavigationDrawerPackage.Activities.Sales"
            android:label="@string/title_activity_sales"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".Navigation.NavigationDrawerPackage.Activities.Purchase"
            android:label="@string/title_activity_purchase"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Navigation.NavigationDrawerPackage.Activities.InvoiceDetailSales"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Navigation.NavigationDrawerPackage.Activities.InvoiceDetailPurchase"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Navigation.NavigationDrawerPackage.Activities.TrialBalance" />
        <activity android:name=".Navigation.NavigationDrawerPackage.Activities.BalanceSheet" />
        <activity android:name=".Navigation.NavigationDrawerPackage.Activities.ProfitAndLoss" />
        <activity android:name=".Navigation.NavigationDrawerPackage.Activities.DailyTransaction" />
        <activity android:name=".Navigation.NavigationDrawerPackage.Activities.InvoiceDetails" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".Navigation.NavigationDrawerPackage.Activities.LoginActivity"
            android:label="@string/title_activity_login">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation.NavigationDrawerPackage.Activities.LoginActivity" />

        </activity>
    </application>

</manifest>